---
import type { HTMLAttributes } from 'astro/types';
import type { Props as BaseVideoProps } from '@components/Video.astro';
import BaseVideo from '@components/Video.astro';

interface Props extends BaseVideoProps {}

const { src, title, videoProps, ...props } = Astro.props;
---

<BaseVideo
  src={src}
  title={title}
  videoProps={{
    loop: true,
    autoplay: true,
    muted: true,
    controls: false,
    ...videoProps,
  }}
  videoClasses="rounded-lg"
  {...props}
/>
